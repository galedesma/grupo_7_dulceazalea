<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/header') %>
    <div class="container sections">
      <section>
        <div class="row articulos">
          <div class="col-12">
            <h1>Perfil de usuario</h1>
          </div>
          <div class="col-12 col-lg-5 imagen_profile">
            <img src="/img/users/<%= user.avatar %> " alt="" />
          </div>
          <div class="col-12 col-lg-4 user_info">
            <form
              action="/user/editProfile/<%= user.id %> ?_method=PUT"
              method="POST"
              enctype="multipart/form-data"
            >
              <div class="form-row justify-content-center">
                <div class="form-group col-12 col-lg-6">
                  <label for="first_name">Nombre:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="first_name"
                    id="first_name"
                    value="<%= user.first_name %>"
                  />
                </div>
                <div class="form-group col-12 col-lg-6">
                  <label for="last_name">Apellido:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="last_name"
                    id="last_name"
                    value="<%= user.last_name %>"
                  />
                </div>
                <div class="form-group col-12">
                  <label for="email">Email:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="email"
                    id="email"
                    value="<%= user.email %>"
                    disabled
                  />
                </div>
                <div class="form-group col-12 col-lg-6">
                  <label for="address">Direcci√≥n:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="address"
                    id="address"
                    value="<%= user.address %>"
                  />
                </div>
                <div class="form-group col-12 col-lg-6">
                  <label for="city">Ciudad:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="city"
                    id="city"
                    value="<%= user.city %>"
                  />
                </div>
                <div class="form-group col-12 col-lg-6">
                  <label for="province">Provincia:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="province"
                    id="province"
                    value="<%= user.province %>"
                  />
                </div>
                <div class="form-group col-12 col-lg-6">
                  <label for="department">Departamento:</label>
                  <input
                    type="text"
                    class="form-control"
                    name="department"
                    id="department"
                    value="<%= user.department %>"
                  />
                </div>
                <div class="d-md-flex justify-content-end mt-5">
                  <button type="button" class="btn-sm btn-secondary m-1">
                    <a href="/" class="text-light">Salir sin guardar</a>
                  </button>
                  <button type="submit" class="btn-sm btn-primary m-1">
                    Actualizar datos
                  </button>
                </div>
              </div>
            </form>
            <!-- <h2><%= user.nick %></h2>

            <h2><%= user.email %></h2> -->
            <!-- <div class="col-12 col-md-4 d-flex justify-content-center">
              <form
                action="/users/delete/<%= user.id %>?_method=DELETE"
                method="POST"
              >
                <button type="submit" class="btn-sm btn-danger">
                  Darse de baja
                </button>
              </form>
            </div> -->
          </div>
        </div>
      </section>
      <section>
        <div class="row articulos">
          <div style="margin: auto">
            <h1>Articulos Publicados</h1>
          </div>
        </div>
      </section>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>
