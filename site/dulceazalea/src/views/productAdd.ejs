<!DOCTYPE html>
<html lang="es">
	<%- include('partials/head') %>
	<script src="/javascript/productAdd.js"></script>
	<body>
		<%- include('partials/header') %>

		<section class="container formularioCarga" >
			<h2 class="h2_titulo">
				Publicar Producto
			</h2>
			<div class="row"id="form__create">
				<div
					class="col-12 col-sm-12 col-md-6 col-lg-6 align-items-center justify-content-center vistaPrevia"
				>
					<img
						src="/img/weebly_image_sample.png"
						class="image-fluid"
						alt="Responsive image"
					/>
				</div>
				<div
					class="col-12 col-sm-12 col-md-6 col-lg-6 align-items-center justify-content-center formularioCarga"
				>
				
					<form action="" method="POST" enctype="multipart/form-data" id="create">
						<ul>
							<li>
								<input type="file" id="img" name="image" accept="image/*" />
								<small class="text-danger" id="errorImage"><%= (typeof errors != 'undefined' && errors.image)?errors.image.msg: "" %> </small>
							</li>
							<li>
								<p>Nombre del producto:</p>
								<input type="text"
									class="form-control<%= (typeof old != 'undefined' && old.name)?"is-valid":(typeof errors != "undefined" && errors.name)?"is-invalid": "" %>"
									name="name" 
									id="nameProduct"
									value="<%= (typeof old!= 'undefined' && old.name)?old.name:'' %> "
									placeholder="Nombre del Producto"
									cols="30"
									rows="1"
								/><br>
								<small class="text-danger" id="errorName"><%= (typeof errors != 'undefined' && errors.name)?errors.name.msg: "" %> </small>
							</li>
							<li>
								<p>Descripci√≥n:</p>
								<textarea
									class="form-control <%= (typeof old != "undefined" && old.description)?"is-valid":(typeof errors != "undefined" && errors.description)?"is-invalid": "" %>"
									name="description"
									id="description"
									cols="30"
									rows="4"
									value="<%= (typeof old!='undefined' && old.description)?old.description:'' %> "
								></textarea>
								<small class="text-danger" id="errorDescription"><%= (typeof errors !='undefined' && errors.description)?errors.description.msg: "" %> </small>
							</li>
							<li>
								<p>Categoria:</p>
								<!-- <input list="categoria" name="category" id="form__categoria__producto"> -->
  								<select id="categoria" name='category' id="form__categoria__producto">
									<% for(i=0; i<categorias.length; i++){ %>
										<option value="<%= categorias[i].id_category%>"><%= categorias[i].name%></option>
									<% } %>
								</select>
							</li>
							<!-- <li>
								<p>Color</p>
									<input type="text" name="colors"/>
								</select>
							</li> -->
							<li>
								<p>Precio:</p>
								<input id="price" class="<%= (typeof old != "undefined" && old.price)?"is-valid":(typeof errors != "undefined" && errors.price)?"is-invalid": "" %> " type="number" name="price"
								value="<%= (typeof old!='undefined' && old.price)?old.price:'' %> "/><br>
								<small class="text-danger" id="errorPrice"><%= (typeof errors !='undefined' && errors.price)?errors.price.msg: "" %> </small>
							</li>
						</ul>
						<button type="submit"id="boton">Cargar Producto</button>
						<small class="text-danger" id="errorSubmitAdd"><%= (typeof errors != 'undefined' && errors.submit)?errors.submit.msg: "" %> </small>
					</form>
					
				</div>
			</div>
		</section>

		<%- include('partials/footer') %>
	</body>
</html>
