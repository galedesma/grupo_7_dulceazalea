<header class="container-fluid scrolling-navbar fixed-top">
  <div class="container" id="header">
    <div class="row">
      <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand mr-auto col-2" href="/">
          <img src="/img/logo.png" id="img__pc" width="150px" alt="" />
          <img src="/img/logo-cel.png" id="img__cel" width="50px" alt="" />
        </a>

        <form
          action="/search"
          method="get"
          class="search-form form-inline my-2 my-lg-0 col-8 col-lg-5"
          id="form"
        >
          <input
            class="search-form_input form-control mr-sm-2"
            type="text"
            name="search"
            placeholder="¿Qué estás buscando?"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">
            <i class="fas fa-search"></i>
          </button>
        </form>
        <button
          class="navbar-toggler"
          type="button"
          data-toggle="collapse"
          data-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
          id="btn_colapse"
        >
          <i class="fas fa-bars"></i>
        </button>
        <div
          class="collapse navbar-collapse col-2 col-lg-7"
          id="navbarSupportedContent"
        >
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
              >
                Opciones
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="/">Inicio</a>
                <a class="dropdown-item" href="/products">Productos</a>
                <% if (typeof user != "undefined" && user.rol=="1") { %>
                <a class="dropdown-item" href="/products/create">Vender</a>
                <% } %>
                <a class="dropdown-item" href="#footer_title">Contacto</a>
                <a class="dropdown-item" href="#">Preguntas Frecuentes</a>
              </div>
            </li>
          </ul>
          <ul class="navbar-nav" id="user__navbar-nav">
            <li class="nav-item active" style="margin-top: 7px">
              <a class="nav-link" href="mailto:ejemplo@gmail.com"
                ><i class="fas fa-comments">Ayuda</i
                ><span class="sr-only">(current)</span></a
              >
            </li>
            <li class="nav-item active dropdown">
              <% if (typeof user == "undefined") {%>
              <a
                style="margin-top: 7px"
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
                ><i class="fas fa-user"></i>
                Usuario
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="nav-link" href="/users/login">
                  Iniciar Sesión <span class="sr-only">(current)</span></a
                >
                <a class="nav-link" href="/users/register">
                  Registrarse <span class="sr-only">(current)</span></a
                >
              </div>
              <% } else {%>
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-toggle="dropdown"
                aria-haspopup="true"
                aria-expanded="false"
                ><img
                  src="/img/users/<%= user.avatar %>"
                  alt=""
                  class="headerUserImagen"
                />
                <%= user.first_name + ' ' + user.last_name %>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="nav-link" href="/users/profile">
                  Perfil <span class="sr-only">(current)</span></a
                >
                <a class="nav-link" href="/users/logout">
                  Cerrar Sesión <span class="sr-only">(current)</span></a
                >
              </div>
              <% } %>
            </li>
            <li class="nav-item active" style="margin-top: 7px">
              <a class="nav-link" href="/carrito"
                ><i class="fas fa-shopping-cart">Carrito</i
                ><span class="sr-only">(current)</span></a
              >
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </div>
</header>
