<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
    <!-- fin del header -->

    <!-- <section class="banner">
			<img src="/img-banner2.jpg" alt="banner img" />
		</section> -->

    <div class="banner">
      <div id="carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <a href="/search?search=halloween"
              ><img
                class="d-block w-100"
                src="../img/banner-halloween1.jpg"
                alt="First slide"
              />
            </a>
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="../img/1135.jpg"
              alt="Second slide"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block w-100"
              src="../img/1136.jpg"
              alt="Third slide"
            />
          </div>
        </div>
      </div>
    </div>

    <div class="container sections">
      <section>
        <div class="row articulos">
          <div class="col-12 titulo">
            <h2>principales</h2>
          </div>

          <% principal.forEach(producto => { %>
          <div class="col-12 col-md-6 col-lg-3">
            <a href="/products/<%= producto.id %> ">
              <div class="productos">
                <figure>
                  <img
                    src="/img/products/<%- producto.image %> "
                    alt=""
                    class="figure"
                  />
                </figure>
                <article>
                  <!--precio-->
                  <h2>$ <%= producto.price %></h2>
                  <!--nombre del producto ??-->
                  <p><%= producto.name %></p>
                </article>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </section>
      <!-- cat2 -->
      <section>
        <div class="row articulos">
          <div class="col-12 titulo">
            <h2>Ofertas</h2>
          </div>

          <% ofertas.forEach(producto => { %>
          <div class="col-12 col-md-6 col-lg-3">
            <a href="/products/<%= producto.id %> ">
              <div class="productos">
                <figure>
                  <img
                    src="/img/products/<%- producto.image %> "
                    alt=""
                    class="figure"
                  />
                </figure>
                <article>
                  <!--precio-->
                  <h2>$ <%= producto.price %></h2>
                  <!--nombre del producto ??-->
                  <p><%= producto.name %></p>
                </article>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </section>
      <!-- cat3 -->
      <section>
        <div class="row articulos">
          <div class="col-12 titulo">
            <h2>Mas Vendidos</h2>
          </div>

          <% masVendidos.forEach(producto => { %>
          <div class="col-12 col-md-6 col-lg-3">
            <a href="/products/<%= producto.id %> ">
              <div class="productos">
                <figure>
                  <img
                    src="/img/products/<%- producto.image %> "
                    alt=""
                    class="figure"
                  />
                </figure>
                <article>
                  <!--precio-->
                  <h2>$ <%= producto.price %></h2>
                  <!--nombre del producto ??-->
                  <p><%= producto.name %></p>
                </article>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </section>
    </div>

    <%- include('partials/footer') %>

    <script>
      $('.carousel').carousel();
    </script>
  </body>
</html>
