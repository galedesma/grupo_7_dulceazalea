          <div class="col-12 col-sm-6 col-md-4">
            <h2><%= usuario.nick %></h2>
          </div>
          <div class="col-12 col-sm-6 col-md-4">
            <h2><%= usuario.email %></h2>
          </div>
        </div>
      </section>
      <section>
        <div class="row articulos">
          <div style="margin: auto">
            <h1>Articulos Publicados</h1>
          </div>
        </div>
