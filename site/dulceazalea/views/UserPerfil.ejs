      <section>
        <div class="row articulos">
          <div class="col-12">
            <h1>Perfil de usuario</h1>
          </div>
          <div class="col-12 col-sm-6 col-md-4 imagen_profile">
            <img src="/img/users/<%= usuario.avatar %> " alt="" />
