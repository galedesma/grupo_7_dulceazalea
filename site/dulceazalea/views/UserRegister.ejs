<!DOCTYPE html>
<html lang="es">
  <%- include('partials/head') %>

  <body>
    <%- include('partials/header') %>
    <!-- fin del header -->

    <div class="mt-4">
      <!-- CREAR CUENTA titulo-->
      <section class="page-header">
        <div class="container">
          <div class="row">
            <div class="col-12">
              <h1>Crear cuenta</h1>
            </div>
          </div>
        </div>
      </section>

      <section class="account-page">
        <div class="container">
          <div class="row justify-content-md-center">
            <div class="col-12 col-md-8">
              <form action="" method="POST" class="form__reg">
                <!-- enctype="multipart/form-data" -->
                <% if (typeof errors != 'undefined') { %>
                <ul>
                  <% for( let i = 0; i < errors.length; i++ ) { %>
                  <p style="color: red"><%=errors[i].msg %></p>
                  <% } %>
                </ul>
                <% } %>
                <div class="form-group">
                  <label class="form-label" for="first_name">Nombre</label>
                  <input
                    type="text"
                    id="first_name"
                    class="form-control"
                    name="first_name"
                    placeholder="nombre"
                  />
                </div>
                <div class="form-group">
                  <label class="form-label" for="name">Apellido</label>
                  <input
                    type="text"
                    id="last_name"
                    class="form-control"
                    autocorrect="off"
                    name="last_name"
                    placeholder="Apellido"
                  />
                </div>
                <div class="form-group">
                  <label class="form-label" for="email">Email</label>
                  <input
                    type="email"
                    id="email"
                    class="form-control"
                    autocorrect="off"
                    name="email"
                    placeholder="Email"
                  />
                </div>
                <div class="form-group">
                  <label class="form-label" for="password">Contrase単a</label>
                  <input
                    type="password"
                    id="password"
                    class="form-control"
                    autocorrect="off"
                    name="password"
                    placeholder="Contrase単a"
                  />
                </div>
                <div class="form-group">
                  <label class="form-label" for="password_confirmation"
                    >Confirmar Contrase単a</label
                  >
                  <input
                    type="password"
                    id="password_confirmation"
                    class="form-control"
                    autocorrect="off"
                    name="password_confirmation"
                    placeholder="Repetir Contrase単a"
                  />
                </div>
                <div class="form-group">
                  <button id="boton" class="btn btn-primary btn-block">
                    Crear cuenta
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
