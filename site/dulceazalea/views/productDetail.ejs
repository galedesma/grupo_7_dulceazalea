<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head') %>
	<body>
		<%- include('partials/header') %>
		<!-- fin del header -->

    <div class="container ">
      <section>
        <div class="row productDetail">
          <div class="col-12 col-lg-7">
            <figure>
              <img src="/img/products/<%= producto.image %> " alt="" id="imagen__product">
            </figure>
          </div>
          <div class="col-12 col-lg-5">
            <h2>
              <%= producto.name %> 
            </h2>
            <h2>
              $<%= producto.price %> 
            </h2>
            <form action="">
              <input type="number" class="form-control js-quantity-input form-control-inline" autocorrect="off" autocapitalize="off" name="quantity" value="1" min="1" aria-label="Cambiar cantidad">
              <h3>18 cuotas de <%= (producto.price/18).toFixed(2) %> </h3>
              <ul class="icon">
                <li><i class="fab fa-cc-mastercard" id="icons__footer"></i></li>
                <li><i class="fab fa-cc-amex" id="icons__footer"></i></li>
                <li><i class="fas fa-money-check-alt" id="icons__footer"></i></li>
              </ul>
              <input type="button" id="boton" value="AGREGAR AL CARRITO">    
            </form>
          </div>
        </div>

        <div class="row descripcion"> 
          <div class="col-12">
            <h2>
              <%= producto.name %> 
            </h2>
            <p>
              <%= producto.description %>
            </p>
          </div>
        </div>
      </div> 
      </section>
    </div>
		
		<%- include('partials/footer') %>
	</body>
</html>
