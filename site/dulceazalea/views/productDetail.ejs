<!DOCTYPE html>
<html lang="en">
	<%- include('partials/head') %>
	<body>
		<header class="container-fluid">
			<div class="container">
				<div class="row">
					<!-- logo -->
					<div class="col-5 col-md-2 col-lg-2 logo">
						<a href="home.ejs"
						><img src="/img/logo-mercado-liebre.svg" alt="logo"/></a>
					</div>

					<!--barra de busqueda-->
					<div class="col-7 col-md-6 col-lg-6">
						<form action="" method="get" class="search-form">
							<input
								type="text"
								name="search"
								placeholder="¿Qué estás buscando?"
								class="search-form_input"
							/>
							<button type="submit" class="search-form_button">
							<i class="fas fa-search"></i>
							</button>
						</form>
					</div>
				</div>
				<div class="col-12 user">
					<li>
						<a href=" "><i class="fas fa-comments">Contacto</i></a>
					</li>
					<li>	
						<a href="productCart.html"><i class="fas fa-shopping-cart">Carrito</i></a>
					</li>
					<li>
						<a href=" "><a href="register.html"><i class="fas fa-user"></i></a>Ingrasar</i></a>
					</li>
				</div>
			</div>
		</header>
		<!-- fin del header -->

    <div class="container ">
      <section>
        <div class="row productDetail">
          <div class="col-12 col-lg-7">
            <figure>
              <img src="/img/products/<%= producto.image %> " alt="" id="imagen__product">
            </figure>
          </div>
          <div class="col-12 col-lg-5">
            <h2>
              <%= producto.name %> 
            </h2>
            <h2>
              $<%= producto.price %> 
            </h2>
            <form action="">
              <input type="number" class="form-control js-quantity-input form-control-inline" autocorrect="off" autocapitalize="off" name="quantity" value="1" min="1" aria-label="Cambiar cantidad">
              <h3>18 cuotas de <%= (producto.price/18).toFixed(2) %> </h3>
              <ul class="icon">
                <li><i class="fab fa-cc-mastercard" id="icons__footer"></i></li>
                <li><i class="fab fa-cc-amex" id="icons__footer"></i></li>
                <li><i class="fas fa-money-check-alt" id="icons__footer"></i></li>
              </ul>
              <input type="button" id="boton" value="AGREGAR AL CARRITO">    
            </form>
          </div>
        </div>

        <div class="row descripcion"> 
          <div class="col-12">
            <h2>
              <%= producto.name %> 
            </h2>
            <p>
              <%= producto.description %>
            </p>
          </div>
        </div>
      </div> 
      </section>
    </div>
		
		<%- include('partials/footer') %>
	</body>
</html>
